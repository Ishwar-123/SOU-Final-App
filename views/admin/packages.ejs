  </footer>

  <script>
    let packageToDelete = null;

    function openAddModal() {
      document.getElementById('addModal').classList.remove('hidden');
      calculateAddPrice();
    }

    function closeAddModal() {
      document.getElementById('addModal').classList.add('hidden');
    }

    function openEditModal(pkg) {
      document.getElementById('editId').value = pkg._id;
      document.getElementById('editName').value = pkg.name;
      document.getElementById('editDuration').value = pkg.duration;
      document.getElementById('editDescription').value = pkg.description;

      if (pkg.startDate) {
        const dateObj = new Date(pkg.startDate);
        const formattedDate = dateObj.toISOString().split('T')[0];
        document.getElementById('editStartDate').value = formattedDate;
      }

      if (pkg.college && pkg.college._id) {
        document.getElementById('editCollege').value = pkg.college._id;
      }

      const selectedPlaces = pkg.places.map(p => p._id);
      document.querySelectorAll('.edit-place-checkbox').forEach(checkbox => {
        checkbox.checked = selectedPlaces.includes(checkbox.value);
      });

      document.getElementById('editModal').classList.remove('hidden');
      calculateEditPrice();
    }

    function closeEditModal() {
      document.getElementById('editModal').classList.add('hidden');
    }

    function calculateAddPrice() {
      const checkboxes = document.querySelectorAll('#addModal input[name="places"]:checked');
      let total = 0;

      checkboxes.forEach(cb => {
        total += parseFloat(cb.dataset.price) || 0;
      });

      document.getElementById('addTotalPrice').textContent = '‚Çπ' + total.toLocaleString('en-IN');
      document.getElementById('addPackagePrice').value = total;
    }

    function calculateEditPrice() {
      const checkboxes = document.querySelectorAll('#editModal input[name="places"]:checked');
      let total = 0;

      checkboxes.forEach(cb => {
        total += parseFloat(cb.dataset.price) || 0;
      });

      document.getElementById('editTotalPrice').textContent = '‚Çπ' + total.toLocaleString('en-IN');
      document.getElementById('editPackagePrice').value = total;
    }

    function deletePackage(id, name) {
      packageToDelete = id;
      document.getElementById('deletePackageName').querySelector('p').textContent = name || 'this package';
      document.getElementById('deleteModal').classList.remove('hidden');
    }

    function closeDeleteModal() {
      document.getElementById('deleteModal').classList.add('hidden');
      packageToDelete = null;
    }

    function confirmDelete() {
      if (packageToDelete) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '/admin/packages/delete';
        const input = document.createElement('input');
        input.type = 'hidden';
        input.name = 'id';
        input.value = packageToDelete;
        form.appendChild(input);
        document.body.appendChild(form);
        form.submit();
      }
    }

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        closeAddModal();
        closeEditModal();
        closeDeleteModal();
      }
    });

    // College filter
    const collegeFilter = document.getElementById('collegeFilter');
    const clearCollegeFilter = document.getElementById('clearCollegeFilter');

    function applyCollegeFilter() {
      const selected = collegeFilter.value;
      const cards = document.querySelectorAll('.package-card');

      cards.forEach(card => {
        const cardCollegeId = card.getAttribute('data-college-id') || '';
        if (selected === 'all' || selected === cardCollegeId) {
          card.classList.remove('hidden');
        } else {
          card.classList.add('hidden');
        }
      });
    }

    if (collegeFilter) {
      collegeFilter.addEventListener('change', applyCollegeFilter);
    }

    if (clearCollegeFilter) {
      clearCollegeFilter.addEventListener('click', () => {
        collegeFilter.value = 'all';
        applyCollegeFilter();
      });
    }
  </script>

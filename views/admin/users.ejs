<script>
  let userToDelete = null;
  const totalUsers = <%= users.length %>;


  function filterUsers() {
    const searchTerm = document.getElementById('searchInput').value.toLowerCase().trim();
    const selectedCollege = document.getElementById('collegeFilter').value;
    const selectedPayment = document.getElementById('paymentFilter').value;
    const userCards = document.querySelectorAll('.user-card');
    const noResults = document.getElementById('noResults');
    let visibleCount = 0;


    userCards.forEach(card => {
      const cardCollege = card.getAttribute('data-college');
      const cardName = card.getAttribute('data-name') || '';
      const cardRoll = card.getAttribute('data-roll') || '';
      const cardPayment = card.getAttribute('data-payment') || 'pending';


      const collegeMatch = selectedCollege === '' || cardCollege === selectedCollege;
      const searchMatch =
        searchTerm === '' ||
        cardName.includes(searchTerm) ||
        cardRoll.includes(searchTerm);
      const paymentMatch =
        selectedPayment === '' || cardPayment === selectedPayment;


      if (collegeMatch && searchMatch && paymentMatch) {
        card.style.display = 'block';
        visibleCount++;
      } else {
        card.style.display = 'none';
      }
    });


    document.getElementById('userCount').textContent = visibleCount;
    document
      .getElementById('filterStats')
      .querySelector('span:last-child').textContent = ` / ${totalUsers} students`;


    if (visibleCount === 0) {
      noResults.classList.remove('hidden');
    } else {
      noResults.classList.add('hidden');
    }
  }


  function resetFilter() {
    document.getElementById('searchInput').value = '';
    document.getElementById('collegeFilter').value = '';
    document.getElementById('paymentFilter').value = '';
    filterUsers();
  }


  // Payment Modal Functions
  function openPaymentModal(userId, userName, currentStatus) {
    document.getElementById('paymentUserId').value = userId;
    document.getElementById('paymentStudentName').textContent = `Student: ${userName}`;
    
    if (currentStatus === 'success') {
      document.getElementById('statusSuccess').checked = true;
    } else {
      document.getElementById('statusPending').checked = true;
    }
    
    document.getElementById('paymentModal').classList.remove('hidden');
  }


  function closePaymentModal() {
    document.getElementById('paymentModal').classList.add('hidden');
  }


  function deleteUser(id, name) {
    userToDelete = id;
    document.getElementById('deleteUserName').querySelector('p').textContent = name || 'this student';
    document.getElementById('deleteModal').classList.remove('hidden');
  }
  
  function closeDeleteModal() {
    document.getElementById('deleteModal').classList.add('hidden');
    userToDelete = null;
  }
  
  function confirmDelete() {
    if (userToDelete) {
      const form = document.createElement('form');
      form.method = 'POST';
      form.action = '/admin/users/delete';
      const input = document.createElement('input');
      input.type = 'hidden';
      input.name = 'id';
      input.value = userToDelete;
      form.appendChild(input);
      document.body.appendChild(form);
      form.submit();
    }
  }


  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      closeDeleteModal();
      closePaymentModal();
    }
  });
</script>

</footer>

  <script>
    // Store bus ID for deletion
    let busToDelete = null;

    function filterBuses() {
      const selectedCollege = document.getElementById('collegeFilter').value;
      const busCards = document.querySelectorAll('.bus-card');
      const noResults = document.getElementById('noResults');
      const busesGrid = document.getElementById('busesGrid');
      let visibleCount = 0;

      busCards.forEach(card => {
        const cardCollege = card.getAttribute('data-college');
        
        if (selectedCollege === '' || cardCollege === selectedCollege) {
          card.style.display = 'block';
          visibleCount++;
        } else {
          card.style.display = 'none';
        }
      });

      document.getElementById('busCount').textContent = visibleCount;

      if (visibleCount === 0) {
        busesGrid.appendChild(noResults);
        noResults.classList.remove('hidden');
      } else {
        noResults.classList.add('hidden');
      }
    }

    function resetFilter() {
      document.getElementById('collegeFilter').value = '';
      filterBuses();
    }

    function openAddModal() { 
      document.getElementById('addModal').classList.remove('hidden'); 
    }
    
    function closeAddModal() { 
      document.getElementById('addModal').classList.add('hidden'); 
    }
    
    function openEditModal(bus) {
      document.getElementById('editId').value = bus._id;
      document.getElementById('editCollege').value = bus.college._id || bus.college;
      document.getElementById('editBusName').value = bus.busName;
      document.getElementById('editBusNumber').value = bus.busNumber;
      document.getElementById('editCapacity').value = bus.capacity;
      document.getElementById('editModal').classList.remove('hidden');
    }
    
    function closeEditModal() { 
      document.getElementById('editModal').classList.add('hidden'); 
    }
    
    // âœ… NEW: Open delete confirmation modal
    function deleteBus(id, name) {
      busToDelete = id;
      
      // Show bus name in modal
      document.getElementById('deleteBusName').querySelector('p').textContent = name || 'this bus';
      
      // Show modal
      document.getElementById('deleteModal').classList.remove('hidden');
    }
    
    // âœ… NEW: Close delete modal
    function closeDeleteModal() {
      document.getElementById('deleteModal').classList.add('hidden');
      busToDelete = null;
    }
    
    // âœ… NEW: Confirm deletion
    function confirmDelete() {
      if (busToDelete) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '/admin/buses/delete';
        const input = document.createElement('input');
        input.type = 'hidden';
        input.name = 'id';
        input.value = busToDelete;
        form.appendChild(input);
        document.body.appendChild(form);
        form.submit();
      }
    }

    // Close modals with Escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        closeAddModal();
        closeEditModal();
        closeDeleteModal();
      }
    });
  </script>

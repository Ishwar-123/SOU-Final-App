<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    body { 
      background: linear-gradient(135deg, #f5f7fa 0%, #e4e9f2 50%, #dce3f0 100%);
      font-family: 'Inter', system-ui, -apple-system, sans-serif;
    }
  </style>
</head>
<body>
  <%- include('../partials/navbar') %>
  
  <div class="flex">
    <%- include('../partials/sidebar') %>
    
    <main class="flex-1 ml-64 p-8 pt-32">
      
      <!-- Header -->
      <div class="bg-gradient-to-br from-blue-50 via-cyan-50 to-indigo-50 rounded-3xl shadow-xl p-8 mb-8 border-4 border-blue-200">
        <div class="flex justify-between items-center">
          <div>
            <h1 class="text-5xl font-black bg-gradient-to-r from-blue-600 via-cyan-600 to-indigo-600 bg-clip-text text-transparent mb-2">
              üè´ College Management
            </h1>
            <p class="text-gray-700 text-lg font-semibold">Manage all colleges and institutes</p>
          </div>
          <button onclick="openAddModal()" class="bg-gradient-to-r from-blue-500 to-cyan-600 hover:from-blue-600 hover:to-cyan-700 text-white font-bold py-4 px-8 rounded-2xl shadow-xl hover:shadow-2xl transform hover:scale-105 transition-all border-2 border-white">
            <svg class="w-6 h-6 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            Add College
          </button>
        </div>
      </div>

      <!-- Messages -->
      <% if (success) { %>
        <div class="mb-6 p-5 bg-gradient-to-r from-green-50 to-emerald-50 border-l-4 border-green-500 rounded-2xl shadow-lg">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-green-500 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            <p class="text-green-800 font-bold text-lg"><%= success %></p>
          </div>
        </div>
      <% } %>
      
      <% if (error) { %>
        <div class="mb-6 p-5 bg-gradient-to-r from-red-50 to-pink-50 border-l-4 border-red-500 rounded-2xl shadow-lg">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-red-500 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </div>
            <p class="text-red-800 font-bold text-lg"><%= error %></p>
          </div>
        </div>
      <% } %>

      <!-- Table Card -->
      <div class="bg-white rounded-3xl shadow-2xl overflow-hidden border-4 border-blue-200">
        <!-- Table Header -->
        <div class="bg-gradient-to-r from-blue-50 to-cyan-50 p-6 border-b-4 border-blue-200">
          <h2 class="text-2xl font-black text-gray-800">üìã All Colleges</h2>
          <p class="text-gray-600 text-sm font-semibold mt-1">Total: <%= colleges.length %> colleges</p>
        </div>

        <div class="overflow-x-auto">
          <table class="min-w-full">
            <thead class="bg-gradient-to-r from-blue-500 to-cyan-600 text-white">
              <tr>
                <th class="px-6 py-4 text-left font-black uppercase tracking-wider">College Name</th>
                <th class="px-6 py-4 text-left font-black uppercase tracking-wider">Departments</th>
                <th class="px-6 py-4 text-left font-black uppercase tracking-wider">SOU Ambassador</th>
                <th class="px-6 py-4 text-left font-black uppercase tracking-wider">Contact</th>
                <th class="px-6 py-4 text-center font-black uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="divide-y-2 divide-blue-100">
              <% if (colleges.length === 0) { %>
                <tr>
                  <td colspan="5" class="px-6 py-16 text-center">
                    <div class="flex flex-col items-center justify-center">
                      <div class="w-24 h-24 bg-blue-100 rounded-full flex items-center justify-center mb-4">
                        <svg class="w-12 h-12 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16"></path>
                        </svg>
                      </div>
                      <p class="text-gray-500 text-xl font-bold mb-2">No colleges found</p>
                      <p class="text-gray-400 font-semibold">Click "Add College" to get started!</p>
                    </div>
                  </td>
                </tr>
              <% } else { %>
                <% colleges.forEach((college, index) => { %>
                  <tr class="hover:bg-gradient-to-r hover:from-blue-50 hover:to-cyan-50 transition-all">
                    <td class="px-6 py-5">
                      <div class="flex items-center gap-3">
                        <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-cyan-600 rounded-xl flex items-center justify-center text-white font-black text-lg shadow-lg">
                          <%= college.name.charAt(0).toUpperCase() %>
                        </div>
                        <div class="font-bold text-gray-800 text-lg"><%= college.name %></div>
                      </div>
                    </td>
                    <td class="px-6 py-5">
                      <% if (college.departments && college.departments.length > 0) { %>
                        <div class="flex flex-wrap gap-2">
                          <% college.departments.forEach(dept => { %>
                            <span class="bg-gradient-to-r from-purple-100 to-pink-100 text-purple-700 px-3 py-1.5 rounded-full text-xs font-bold border-2 border-purple-200 shadow-sm">
                              <%= dept %>
                            </span>
                          <% }); %>
                        </div>
                      <% } else { %>
                        <span class="text-gray-400 font-semibold">No departments</span>
                      <% } %>
                    </td>
                    <td class="px-6 py-5">
                      <div class="flex items-center gap-2">
                        <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        <span class="text-gray-700 font-semibold"><%= college.souAmbassadorName %></span>
                      </div>
                    </td>
                    <td class="px-6 py-5">
                      <div class="flex items-center gap-2">
                        <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                        </svg>
                        <span class="text-gray-700 font-semibold"><%= college.souAmbassadorContact %></span>
                      </div>
                    </td>
                    <td class="px-6 py-5 text-center">
                      <div class="flex items-center justify-center gap-3">
                        <button onclick='openEditModal(<%= JSON.stringify(college) %>)' class="bg-gradient-to-r from-blue-500 to-cyan-600 hover:from-blue-600 hover:to-cyan-700 text-white px-5 py-2.5 rounded-xl font-bold shadow-lg hover:shadow-xl transform hover:scale-105 transition-all">
                          ‚úèÔ∏è Edit
                        </button>
                        <button onclick="deleteCollege('<%= college._id %>', '<%= college.name.replace(/'/g, "\\'") %>')" class="bg-gradient-to-r from-red-500 to-pink-600 hover:from-red-600 hover:to-pink-700 text-white px-5 py-2.5 rounded-xl font-bold shadow-lg hover:shadow-xl transform hover:scale-105 transition-all">
                          üóëÔ∏è Delete
                        </button>
                      </div>
                    </td>
                  </tr>
                <% }); %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </main>
  </div>

  <!-- Add Modal -->
  <div id="addModal" class="hidden fixed inset-0 bg-black bg-opacity-60 z-50 flex items-center justify-center p-4 backdrop-blur-sm">
    <div class="bg-white rounded-3xl max-w-3xl w-full p-8 max-h-[90vh] overflow-y-auto shadow-2xl border-4 border-blue-200 transform scale-95 transition-all">
      <div class="flex justify-between items-center mb-6">
        <div>
          <h2 class="text-4xl font-black bg-gradient-to-r from-blue-600 to-cyan-600 bg-clip-text text-transparent">
            ‚ûï Add New College
          </h2>
          <p class="text-gray-600 font-semibold mt-1">Fill in the details below</p>
        </div>
        <button onclick="closeAddModal()" class="w-12 h-12 bg-red-100 hover:bg-red-200 rounded-xl flex items-center justify-center transition-all">
          <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      
      <form action="/admin/colleges/create" method="POST" class="space-y-5">
        <div>
          <label class="block text-gray-800 font-black mb-2 text-sm uppercase tracking-wider">College Name *</label>
          <input type="text" name="name" required class="w-full px-5 py-4 border-3 border-blue-200 rounded-2xl focus:border-blue-500 focus:outline-none font-semibold shadow-sm" placeholder="e.g., Gujarat University">
        </div>
        
        <div>
          <label class="block text-gray-800 font-black mb-2 text-sm uppercase tracking-wider">Departments * (comma-separated)</label>
          <input 
            type="text" 
            name="departments" 
            required 
            class="w-full px-5 py-4 border-3 border-blue-200 rounded-2xl focus:border-blue-500 focus:outline-none font-semibold shadow-sm" 
            placeholder="e.g., BCA, MCA, B.Tech, M.Tech, MBA"
          >
          <p class="text-xs text-gray-600 font-semibold mt-2 bg-blue-50 p-3 rounded-xl">üí° Separate multiple departments with commas</p>
        </div>
        
        <div>
          <label class="block text-gray-800 font-black mb-2 text-sm uppercase tracking-wider">SOU Ambassador Name *</label>
          <input type="text" name="souAmbassadorName" required class="w-full px-5 py-4 border-3 border-blue-200 rounded-2xl focus:border-blue-500 focus:outline-none font-semibold shadow-sm" placeholder="Enter ambassador name">
        </div>
        
        <div>
          <label class="block text-gray-800 font-black mb-2 text-sm uppercase tracking-wider">SOU Ambassador Contact *</label>
          <input type="tel" name="souAmbassadorContact" required pattern="[0-9]{10}" class="w-full px-5 py-4 border-3 border-blue-200 rounded-2xl focus:border-blue-500 focus:outline-none font-semibold shadow-sm" placeholder="10-digit mobile number">
        </div>
        
        <div class="flex gap-4 pt-4">
          <button type="submit" class="flex-1 bg-gradient-to-r from-blue-500 to-cyan-600 hover:from-blue-600 hover:to-cyan-700 text-white font-black py-4 rounded-2xl shadow-xl hover:shadow-2xl transform hover:scale-105 transition-all">
            ‚úÖ Add College
          </button>
          <button type="button" onclick="closeAddModal()" class="flex-1 bg-gray-200 hover:bg-gray-300 text-gray-800 font-black py-4 rounded-2xl shadow-lg transition-all">
            ‚ùå Cancel
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Edit Modal -->
  <div id="editModal" class="hidden fixed inset-0 bg-black bg-opacity-60 z-50 flex items-center justify-center p-4 backdrop-blur-sm">
    <div class="bg-white rounded-3xl max-w-3xl w-full p-8 max-h-[90vh] overflow-y-auto shadow-2xl border-4 border-purple-200 transform scale-95 transition-all">
      <div class="flex justify-between items-center mb-6">
        <div>
          <h2 class="text-4xl font-black bg-gradient-to-r from-purple-600 to-pink-600 bg-clip-text text-transparent">
            ‚úèÔ∏è Edit College
          </h2>
          <p class="text-gray-600 font-semibold mt-1">Update college details</p>
        </div>
        <button onclick="closeEditModal()" class="w-12 h-12 bg-red-100 hover:bg-red-200 rounded-xl flex items-center justify-center transition-all">
          <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      
      <form action="/admin/colleges/update" method="POST" class="space-y-5">
        <input type="hidden" name="id" id="editId">
        
        <div>
          <label class="block text-gray-800 font-black mb-2 text-sm uppercase tracking-wider">College Name *</label>
          <input type="text" name="name" id="editName" required class="w-full px-5 py-4 border-3 border-purple-200 rounded-2xl focus:border-purple-500 focus:outline-none font-semibold shadow-sm">
        </div>
        
        <div>
          <label class="block text-gray-800 font-black mb-2 text-sm uppercase tracking-wider">Departments * (comma-separated)</label>
          <input 
            type="text" 
            name="departments" 
            id="editDepartments" 
            required 
            class="w-full px-5 py-4 border-3 border-purple-200 rounded-2xl focus:border-purple-500 focus:outline-none font-semibold shadow-sm"
            placeholder="e.g., BCA, MCA, B.Tech"
          >
          <p class="text-xs text-gray-600 font-semibold mt-2 bg-purple-50 p-3 rounded-xl">üí° Separate multiple departments with commas</p>
        </div>
        
        <div>
          <label class="block text-gray-800 font-black mb-2 text-sm uppercase tracking-wider">SOU Ambassador Name *</label>
          <input type="text" name="souAmbassadorName" id="editAmbassadorName" required class="w-full px-5 py-4 border-3 border-purple-200 rounded-2xl focus:border-purple-500 focus:outline-none font-semibold shadow-sm">
        </div>
        
        <div>
          <label class="block text-gray-800 font-black mb-2 text-sm uppercase tracking-wider">SOU Ambassador Contact *</label>
          <input type="tel" name="souAmbassadorContact" id="editAmbassadorContact" required pattern="[0-9]{10}" class="w-full px-5 py-4 border-3 border-purple-200 rounded-2xl focus:border-purple-500 focus:outline-none font-semibold shadow-sm">
        </div>
        
        <div class="flex gap-4 pt-4">
          <button type="submit" class="flex-1 bg-gradient-to-r from-purple-500 to-pink-600 hover:from-purple-600 hover:to-pink-700 text-white font-black py-4 rounded-2xl shadow-xl hover:shadow-2xl transform hover:scale-105 transition-all">
            üíæ Update College
          </button>
          <button type="button" onclick="closeEditModal()" class="flex-1 bg-gray-200 hover:bg-gray-300 text-gray-800 font-black py-4 rounded-2xl shadow-lg transition-all">
            ‚ùå Cancel
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Delete Confirmation Modal -->
  <div id="deleteModal" class="hidden fixed inset-0 bg-black bg-opacity-60 z-50 flex items-center justify-center p-4 backdrop-blur-sm">
    <div class="bg-white rounded-3xl max-w-md w-full p-8 shadow-2xl border-4 border-red-200 transform scale-95 transition-all">
      <div class="text-center">
        <!-- Warning Icon -->
        <div class="w-24 h-24 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-12 h-12 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
          </svg>
        </div>

        <!-- Title -->
        <h3 class="text-3xl font-black text-gray-800 mb-3">Delete College?</h3>
        
        <!-- Message -->
        <p class="text-gray-600 font-semibold mb-2">Are you sure you want to delete this college?</p>
        <p class="text-red-600 font-bold text-sm mb-6">‚ö†Ô∏è This action cannot be undone!</p>

        <!-- College Name Display -->
        <div id="deleteCollegeName" class="bg-red-50 border-2 border-red-200 rounded-2xl p-4 mb-6">
          <p class="text-gray-700 font-bold text-lg"></p>
        </div>

        <!-- Action Buttons -->
        <div class="flex gap-4">
          <button 
            onclick="closeDeleteModal()" 
            class="flex-1 bg-gray-200 hover:bg-gray-300 text-gray-800 font-black py-4 rounded-2xl shadow-lg transition-all transform hover:scale-105"
          >
            ‚ùå Cancel
          </button>
          <button 
            onclick="confirmDelete()" 
            class="flex-1 bg-gradient-to-r from-red-500 to-pink-600 hover:from-red-600 hover:to-pink-700 text-white font-black py-4 rounded-2xl shadow-xl hover:shadow-2xl transition-all transform hover:scale-105"
          >
            üóëÔ∏è Delete
          </button>
        </div>
      </div>
    </div>
  </div>
<footer class="mt-10 border-t border-gray-200 bg-white/80 backdrop-blur">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 flex flex-col sm:flex-row items-center justify-end gap-2 text-xs sm:text-sm text-gray-600">
    
    <p class="font-semibold text-right">
      ¬© 2026 HTI. All rights reserved.
    </p>

    <p class="flex items-center gap-1 text-right">
      <span>Made by</span>
      <a 
        href="https://www.linkedin.com/in/ishwar-prajapati/" 
        target="_blank" 
        rel="noopener noreferrer"
        class="text-indigo-600 font-bold hover:underline hover:text-indigo-800"
      >
        Ishwar Prajapati
      </a>
    </p>
  </div>
</footer>

  <script>
    // Store college ID for deletion
    let collegeToDelete = null;

    function openAddModal() { 
      document.getElementById('addModal').classList.remove('hidden'); 
    }
    function closeAddModal() { 
      document.getElementById('addModal').classList.add('hidden'); 
    }
    
    function openEditModal(college) {
      document.getElementById('editId').value = college._id;
      document.getElementById('editName').value = college.name;
      
      const depts = college.departments && college.departments.length > 0 
        ? college.departments.join(', ') 
        : '';
      document.getElementById('editDepartments').value = depts;
      
      document.getElementById('editAmbassadorName').value = college.souAmbassadorName;
      document.getElementById('editAmbassadorContact').value = college.souAmbassadorContact;
      document.getElementById('editModal').classList.remove('hidden');
    }
    
    function closeEditModal() { 
      document.getElementById('editModal').classList.add('hidden'); 
    }
    
    // ‚úÖ NEW: Open delete confirmation modal
    function deleteCollege(id, name) {
      collegeToDelete = id;
      
      // Show college name in modal
      document.getElementById('deleteCollegeName').querySelector('p').textContent = name || 'this college';
      
      // Show modal
      document.getElementById('deleteModal').classList.remove('hidden');
    }
    
    // ‚úÖ NEW: Close delete modal
    function closeDeleteModal() {
      document.getElementById('deleteModal').classList.add('hidden');
      collegeToDelete = null;
    }
    
    // ‚úÖ NEW: Confirm deletion
    function confirmDelete() {
      if (collegeToDelete) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '/admin/colleges/delete';
        const input = document.createElement('input');
        input.type = 'hidden';
        input.name = 'id';
        input.value = collegeToDelete;
        form.appendChild(input);
        document.body.appendChild(form);
        form.submit();
      }
    }

    // Close modals with Escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        closeAddModal();
        closeEditModal();
        closeDeleteModal();
      }
    });
  </script>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    body { 
      background: linear-gradient(135deg, #f5f7fa 0%, #e4e9f2 50%, #dce3f0 100%);
      font-family: 'Inter', system-ui, -apple-system, sans-serif;
    }
  </style>
</head>
<body>
  <%- include('../partials/navbar') %>
  
  <div class="flex">
    <%- include('../partials/sidebar') %>
    
    <main class="flex-1 ml-64 p-8 pt-32">
      
      <!-- Header -->
      <div class="bg-gradient-to-br from-green-50 via-emerald-50 to-teal-50 rounded-3xl shadow-xl p-8 mb-8 border-4 border-green-200">
        <div>
          <h1 class="text-5xl font-black bg-gradient-to-r from-green-600 via-emerald-600 to-teal-600 bg-clip-text text-transparent mb-2">
            üì• Export College Data
          </h1>
          <p class="text-gray-700 text-lg font-semibold">Download complete student data by college in CSV format</p>
        </div>
      </div>

      <!-- Messages -->
      <% if (success) { %>
        <div class="mb-6 p-5 bg-gradient-to-r from-green-50 to-emerald-50 border-l-4 border-green-500 rounded-2xl shadow-lg">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-green-500 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            <p class="text-green-800 font-bold text-lg"><%= success %></p>
          </div>
        </div>
      <% } %>
      
      <% if (error) { %>
        <div class="mb-6 p-5 bg-gradient-to-r from-red-50 to-pink-50 border-l-4 border-red-500 rounded-2xl shadow-lg">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-red-500 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </div>
            <p class="text-red-800 font-bold text-lg"><%= error %></p>
          </div>
        </div>
      <% } %>

      <!-- Export Form -->
      <div class="bg-white rounded-3xl shadow-2xl overflow-hidden max-w-4xl border-4 border-green-200">
        <div class="bg-gradient-to-r from-green-500 via-emerald-500 to-teal-500 p-8 text-white">
          <div class="flex items-center gap-4 mb-3">
            <div class="w-16 h-16 bg-white bg-opacity-20 rounded-2xl flex items-center justify-center backdrop-blur">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            <div>
              <h2 class="text-3xl font-black mb-1">üìä Export Student Data</h2>
              <p class="text-green-100 font-semibold">
                Select a college and choose what data to include in CSV
              </p>
            </div>
          </div>
        </div>

        <div class="p-8">
          <form action="/admin/export/download" method="POST">
            
            <!-- College Selection -->
            <div class="mb-6">
              <label class="block text-gray-800 font-black mb-3 text-sm uppercase tracking-wider">
                üéì Select College *
              </label>
              <select 
                name="collegeId" 
                required 
                class="w-full px-5 py-5 border-3 border-green-200 rounded-2xl focus:border-green-500 focus:outline-none font-bold text-lg shadow-sm"
              >
                <option value="">-- Choose a College --</option>
                <% if (colleges && colleges.length > 0) { %>
                  <% colleges.forEach(college => { %>
                    <option value="<%= college._id %>"><%= college.name %></option>
                  <% }); %>
                <% } %>
              </select>
              <p class="text-sm text-gray-600 font-semibold mt-3 bg-green-50 p-3 rounded-xl">
                üí° Select the college whose student data you want to export
              </p>
            </div>

            <!-- WHAT TO INCLUDE -->
            <div class="mb-6 bg-gradient-to-br from-emerald-50 to-teal-50 border-4 border-emerald-200 rounded-2xl p-6">
              <div class="flex items-center justify-between mb-4">
                <div class="flex items-center gap-3">
                  <div class="w-10 h-10 bg-emerald-500 rounded-xl flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M3 7h18M3 12h18M3 17h18"></path>
                    </svg>
                  </div>
                  <div>
                    <p class="font-black text-gray-900 text-lg">Select Data to Include</p>
                    <p class="text-xs text-gray-600 font-semibold">
                      Tick sections you want in the CSV file
                    </p>
                  </div>
                </div>

                <!-- Select All toggle -->
                <button 
                  type="button"
                  id="toggleAllFields"
                  class="text-xs font-bold px-3 py-2 rounded-xl border-2 border-emerald-400 text-emerald-700 bg-white hover:bg-emerald-50 transition"
                >
                  Select All
                </button>
              </div>

              <div class="grid md:grid-cols-2 gap-3 text-sm">
                <!-- Student basic info -->
                <label class="flex items-start gap-2 bg-white rounded-xl p-3 border-2 border-emerald-100 cursor-pointer">
                  <input 
                    type="checkbox" 
                    name="fields" 
                    value="student"
                    class="mt-1 w-4 h-4 text-emerald-600 border-emerald-300 rounded"
                    checked
                  >
                  <div>
                    <p class="font-bold text-gray-800">Student Details</p>
                    <p class="text-xs text-gray-600 font-semibold">
                      Name, email, mobile, SPU ID, roll no, <span class="font-bold">gender</span>, age, department, division.
                    </p>
                  </div>
                </label>

                <!-- Package details -->
                <label class="flex items-start gap-2 bg-white rounded-xl p-3 border-2 border-emerald-100 cursor-pointer">
                  <input 
                    type="checkbox" 
                    name="fields" 
                    value="package"
                    class="mt-1 w-4 h-4 text-emerald-600 border-emerald-300 rounded"
                    checked
                  >
                  <div>
                    <p class="font-bold text-gray-800">Package Details</p>
                    <p class="text-xs text-gray-600 font-semibold">
                      Package name, price, duration, included places count.
                    </p>
                  </div>
                </label>

                <!-- Bus details -->
                <label class="flex items-start gap-2 bg-white rounded-xl p-3 border-2 border-emerald-100 cursor-pointer">
                  <input 
                    type="checkbox" 
                    name="fields" 
                    value="bus"
                    class="mt-1 w-4 h-4 text-emerald-600 border-emerald-300 rounded"
                    checked
                  >
                  <div>
                    <p class="font-bold text-gray-800">Bus Details</p>
                    <p class="text-xs text-gray-600 font-semibold">
                      Bus name, number, seat number.
                    </p>
                  </div>
                </label>

                <!-- Pricing / totals -->
                <label class="flex items-start gap-2 bg-white rounded-xl p-3 border-2 border-emerald-100 cursor-pointer">
                  <input 
                    type="checkbox" 
                    name="fields" 
                    value="pricing"
                    class="mt-1 w-4 h-4 text-emerald-600 border-emerald-300 rounded"
                    checked
                  >
                  <div>
                    <p class="font-bold text-gray-800">Pricing Details</p>
                    <p class="text-xs text-gray-600 font-semibold">
                      Package amount, final total, payment status.
                    </p>
                  </div>
                </label>

                <!-- Dates / meta -->
                <label class="flex items-start gap-2 bg-white rounded-xl p-3 border-2 border-emerald-100 cursor-pointer">
                  <input 
                    type="checkbox" 
                    name="fields" 
                    value="dates"
                    class="mt-1 w-4 h-4 text-emerald-600 border-emerald-300 rounded"
                    checked
                  >
                  <div>
                    <p class="font-bold text-gray-800">Date Information</p>
                    <p class="text-xs text-gray-600 font-semibold">
                      Registration date, package selected date, bus selected date.
                    </p>
                  </div>
                </label>
              </div>

              <p class="mt-3 text-xs text-gray-600 font-semibold">
                üîß Tip: Aap chaho to sirf specific sections export kar sakte ho (e.g. sirf bus list) ya ‚ÄúSelect All‚Äù se full report le sakte ho.
              </p>
            </div>

            <!-- Submit Button -->
            <button 
              type="submit" 
              class="w-full bg-gradient-to-r from-green-500 to-emerald-600 hover:from-green-600 hover:to-emerald-700 text-white font-black py-5 rounded-2xl shadow-xl hover:shadow-2xl transform hover:scale-105 transition-all text-xl"
            >
              <svg class="w-7 h-7 inline-block mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
              Download CSV File
            </button>
          </form>
        </div>
      </div>

      <!-- Instructions -->
      <div class="mt-8 bg-white rounded-3xl shadow-xl p-8 border-4 border-green-200">
        <div class="flex items-center gap-3 mb-6">
          <div class="w-12 h-12 bg-gradient-to-r from-green-500 to-emerald-600 rounded-xl flex items-center justify-center shadow-lg">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253"></path>
            </svg>
          </div>
          <h3 class="font-black text-gray-800 text-2xl uppercase tracking-wider">üìñ How to Use:</h3>
        </div>
        
        <div class="space-y-4">
          <div class="flex items-start gap-4 bg-gradient-to-r from-green-50 to-emerald-50 p-4 rounded-2xl border-2 border-green-200">
            <div class="w-10 h-10 bg-gradient-to-r from-green-500 to-emerald-600 text-white rounded-full flex items-center justify-center text-lg font-black flex-shrink-0 shadow-lg">
              1
            </div>
            <div>
              <p class="font-bold text-gray-800 text-lg">Select College</p>
              <p class="text-gray-600 font-semibold">Choose the college from the dropdown menu</p>
            </div>
          </div>

          <div class="flex items-start gap-4 bg-gradient-to-r from-blue-50 to-cyan-50 p-4 rounded-2xl border-2 border-blue-200">
            <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-cyan-600 text-white rounded-full flex items-center justify-center text-lg font-black flex-shrink-0 shadow-lg">
              2
            </div>
            <div>
              <p class="font-bold text-gray-800 text-lg">Click Download Button</p>
              <p class="text-gray-600 font-semibold">Press "Download CSV File" to start the export</p>
            </div>
          </div>

          <div class="flex items-start gap-4 bg-gradient-to-r from-purple-50 to-pink-50 p-4 rounded-2xl border-2 border-purple-200">
            <div class="w-10 h-10 bg-gradient-to-r from-purple-500 to-pink-600 text-white rounded-full flex items-center justify-center text-lg font-black flex-shrink-0 shadow-lg">
              3
            </div>
            <div>
              <p class="font-bold text-gray-800 text-lg">Automatic Download</p>
              <p class="text-gray-600 font-semibold">File downloads automatically with all student details</p>
            </div>
          </div>

          <div class="flex items-start gap-4 bg-gradient-to-r from-orange-50 to-amber-50 p-4 rounded-2xl border-2 border-orange-200">
            <div class="w-10 h-10 bg-gradient-to-r from-orange-500 to-red-500 text-white rounded-full flex items-center justify-center text-lg font-black flex-shrink-0 shadow-lg">
              4
            </div>
            <div>
              <p class="font-bold text-gray-800 text-lg">Open in Spreadsheet</p>
              <p class="text-gray-600 font-semibold">Use Excel, Google Sheets, or any spreadsheet software</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Quick Stats -->
      <div class="mt-8 grid md:grid-cols-3 gap-6">
        <div class="bg-gradient-to-br from-blue-50 to-cyan-50 rounded-3xl p-6 border-4 border-blue-200 text-center">
          <div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-cyan-600 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <p class="text-gray-600 font-bold text-sm uppercase tracking-wider mb-1">Format</p>
          <p class="text-2xl font-black text-blue-600">CSV File</p>
        </div>

        <div class="bg-gradient-to-br from-purple-50 to-pink-50 rounded-3xl p-6 border-4 border-purple-200 text-center">
          <div class="w-16 h-16 bg-gradient-to-r from-purple-500 to-pink-600 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <p class="text-gray-600 font-bold text-sm uppercase tracking-wider mb-1">Speed</p>
          <p class="text-2xl font-black text-purple-600">Instant</p>
        </div>

        <div class="bg-gradient-to-br from-green-50 to-emerald-50 rounded-3xl p-6 border-4 border-green-200 text-center">
          <div class="w-16 h-16 bg-gradient-to-r from-green-500 to-emerald-600 rounded-2xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
          </div>
          <p class="text-gray-600 font-bold text-sm uppercase tracking-wider mb-1">Data</p>
          <p class="text-2xl font-black text-green-600">Complete</p>
        </div>
      </div>

    </main>
  </div>

  <footer class="mt-10 border-t border-gray-200 bg-white/80 backdrop-blur">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 flex flex-col sm:flex-row items-center justify-end gap-2 text-xs sm:text-sm text-gray-600">
      <p class="font-semibold text-right">
        ¬© 2026 HTI. All rights reserved.
      </p>

      <p class="flex items-center gap-1 text-right">
        <span>Made by</span>
        <a 
          href="https://www.linkedin.com/in/ishwar-prajapati/" 
          target="_blank" 
          rel="noopener noreferrer"
          class="text-indigo-600 font-bold hover:underline hover:text-indigo-800"
        >
          Ishwar Prajapati
        </a>
      </p>
    </div>
  </footer>

  <script>
    const toggleBtn = document.getElementById('toggleAllFields');
    if (toggleBtn) {
      toggleBtn.addEventListener('click', () => {
        const checkboxes = document.querySelectorAll('input[name="fields"]');
        const allChecked = Array.from(checkboxes).every(cb => cb.checked);
        checkboxes.forEach(cb => cb.checked = !allChecked);
        toggleBtn.textContent = allChecked ? 'Select All' : 'Unselect All';
      });
    }
  </script>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    * {
      -webkit-tap-highlight-color: transparent;
    }
    
    body {
      background: linear-gradient(135deg, #f093fb 0%, #f5576c 50%, #4facfe 100%);
      min-height: 100vh;
      font-family: 'Inter', system-ui, -apple-system, sans-serif;
      overflow-x: hidden;
    }
    
    .glass-card {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(20px);
      border: 1px solid rgba(255, 255, 255, 0.3);
    }
    
    .floating {
      animation: float 6s ease-in-out infinite;
    }
    
    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-15px); }
    }
    
    .gradient-text {
      background: linear-gradient(135deg, #f5576c 0%, #4facfe 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .bg-circle {
      position: absolute;
      border-radius: 50%;
      background: rgba(255, 255, 255, 0.1);
      animation: pulse 4s ease-in-out infinite;
      pointer-events: none;
    }
    
    @keyframes pulse {
      0%, 100% { transform: scale(1); opacity: 0.5; }
      50% { transform: scale(1.1); opacity: 0.3; }
    }

    html {
      scroll-behavior: smooth;
    }

    input[type=number]::-webkit-inner-spin-button,
    input[type=number]::-webkit-outer-spin-button {
      -webkit-appearance: none;
      margin: 0;
    }

    input[type=number] {
      -moz-appearance: textfield;
    }

    input:focus, select:focus {
      transform: scale(1.02);
      transition: all 0.2s ease;
    }

    /* Custom Radio Buttons */
    .radio-card {
      transition: all 0.3s ease;
    }

    .radio-card input:checked + label {
      background: linear-gradient(135deg, #ec4899 0%, #3b82f6 100%);
      color: white;
      border-color: #ec4899;
      transform: scale(1.05);
    }
  </style>
</head>

<body class="py-4 sm:py-8">
  
  <!-- Animated Background Circles -->
  <div class="bg-circle w-40 h-40 sm:w-64 sm:h-64 top-10 right-5 sm:right-10" style="animation-delay: 0s;"></div>
  <div class="bg-circle w-60 h-60 sm:w-96 sm:h-96 bottom-10 left-5 sm:left-10" style="animation-delay: 2s;"></div>
  <div class="bg-circle w-32 h-32 sm:w-48 sm:h-48 top-1/2 left-1/4" style="animation-delay: 4s;"></div>

  <div class="w-full max-w-4xl mx-auto px-3 sm:px-4 relative z-10">
    
    <!-- Header -->
    <div class="text-center mb-4 sm:mb-6">
      <div class="w-16 h-16 sm:w-20 sm:h-20 bg-white/20 backdrop-blur-md rounded-2xl flex items-center justify-center mx-auto mb-3 sm:mb-4 shadow-2xl floating">
        <img src="/images/logo.png" alt="Logo" class="w-12 h-12 sm:w-14 sm:h-14 object-contain">
      </div>
      <h1 class="text-3xl sm:text-4xl font-black text-white mb-1 sm:mb-2">Join Mission Unity</h1>
      <p class="text-sm sm:text-base text-white/90 font-semibold">ğŸ“ Start Your Journey Today</p>
    </div>

    <div class="glass-card rounded-3xl p-4 sm:p-6 md:p-8 shadow-2xl">
      
      <!-- Progress Steps -->
      <div class="flex items-center justify-center mb-6 gap-2">
        <div class="flex items-center gap-1 sm:gap-2">
          <div class="w-8 h-8 sm:w-10 sm:h-10 bg-gradient-to-r from-pink-500 to-red-500 rounded-full flex items-center justify-center text-white font-black text-sm sm:text-base shadow-lg">1</div>
          <span class="hidden sm:inline text-gray-700 font-bold text-sm">Personal</span>
        </div>
        <div class="w-6 sm:w-12 h-1 bg-gradient-to-r from-red-500 to-blue-500 rounded"></div>
        <div class="flex items-center gap-1 sm:gap-2">
          <div class="w-8 h-8 sm:w-10 sm:h-10 bg-gradient-to-r from-purple-500 to-blue-500 rounded-full flex items-center justify-center text-white font-black text-sm sm:text-base shadow-lg">2</div>
          <span class="hidden sm:inline text-gray-700 font-bold text-sm">Academic</span>
        </div>
      </div>

      <!-- Error Message -->
      <% if (error) { %>
        <div class="mb-4 sm:mb-6 p-3 sm:p-4 bg-gradient-to-r from-red-50 to-pink-50 border-l-4 border-red-500 rounded-xl shadow-lg">
          <div class="flex items-center gap-2 sm:gap-3">
            <div class="w-7 h-7 sm:w-8 sm:h-8 bg-red-500 rounded-full flex items-center justify-center flex-shrink-0">
              <svg class="w-4 h-4 sm:w-5 sm:h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </div>
            <p class="text-red-700 font-bold text-sm sm:text-base"><%= error %></p>
          </div>
        </div>
      <% } %>

      <!-- Registration Form -->
      <form action="/auth/register" method="POST" id="registrationForm" class="space-y-4 sm:space-y-5">
        
        <!-- Personal Information Section -->
        <div class="bg-gradient-to-r from-pink-50 to-red-50 p-4 sm:p-5 rounded-2xl border-2 border-pink-200">
          <h3 class="text-lg sm:text-xl font-black text-gray-800 mb-3 sm:mb-4 flex items-center gap-2">
            <span class="w-7 h-7 sm:w-8 sm:h-8 bg-gradient-to-r from-pink-500 to-red-500 rounded-full flex items-center justify-center text-white text-xs sm:text-sm">1</span>
            Personal Information
          </h3>
          
          <div class="space-y-3 sm:space-y-4">
            <!-- Full Name -->
            <div>
              <label class="block text-gray-800 font-black mb-1.5 sm:mb-2 text-xs sm:text-sm uppercase tracking-wider">
                ğŸ‘¤ Full Name *
              </label>
              <input 
                type="text" 
                name="fullName" 
                required 
                class="w-full px-3 sm:px-4 py-2.5 sm:py-3 text-sm sm:text-base border-2 sm:border-3 border-pink-200 rounded-xl focus:border-pink-500 focus:ring-2 sm:focus:ring-4 focus:ring-pink-100 focus:outline-none font-semibold shadow-sm transition-all"
                placeholder="John Doe"
              >
            </div>

            <!-- Email -->
            <div>
              <label class="block text-gray-800 font-black mb-1.5 sm:mb-2 text-xs sm:text-sm uppercase tracking-wider">
                ğŸ“§ Email Address *
              </label>
              <input 
                type="email" 
                name="email" 
                required 
                class="w-full px-3 sm:px-4 py-2.5 sm:py-3 text-sm sm:text-base border-2 sm:border-3 border-pink-200 rounded-xl focus:border-pink-500 focus:ring-2 sm:focus:ring-4 focus:ring-pink-100 focus:outline-none font-semibold shadow-sm transition-all"
                placeholder="john@example.com"
              >
            </div>

            <!-- Mobile Number -->
            <div>
              <label class="block text-gray-800 font-black mb-1.5 sm:mb-2 text-xs sm:text-sm uppercase tracking-wider">
                ğŸ“± Mobile Number *
              </label>
              <input 
                type="tel" 
                name="mobileNumber" 
                required 
                pattern="[0-9]{10}" 
                maxlength="10"
                class="w-full px-3 sm:px-4 py-2.5 sm:py-3 text-sm sm:text-base border-2 sm:border-3 border-pink-200 rounded-xl focus:border-pink-500 focus:ring-2 sm:focus:ring-4 focus:ring-pink-100 focus:outline-none font-semibold shadow-sm transition-all"
                placeholder="9876543210"
              >
              <p class="text-xs text-gray-600 font-semibold mt-1">10-digit mobile number</p>
            </div>

            <!-- Gender, SPU ID, and Age Row -->
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-3 sm:gap-4">
              <!-- Gender -->
              <div>
                <label class="block text-gray-800 font-black mb-2 text-xs sm:text-sm uppercase tracking-wider">
                  âš§ï¸ Gender *
                </label>
                <div class="grid grid-cols-2 gap-2">
                  <!-- Male -->
                  <div class="radio-card">
                    <input type="radio" id="male" name="gender" value="Male" required class="hidden peer">
                    <label for="male" class="flex items-center justify-center gap-2 px-3 py-2.5 border-2 border-pink-200 rounded-xl cursor-pointer font-bold text-gray-700 hover:border-pink-300 transition-all text-sm">
                      <span>ğŸ‘¨</span>
                      <span>Male</span>
                    </label>
                  </div>

                  <!-- Female -->
                  <div class="radio-card">
                    <input type="radio" id="female" name="gender" value="Female" required class="hidden peer">
                    <label for="female" class="flex items-center justify-center gap-2 px-3 py-2.5 border-2 border-pink-200 rounded-xl cursor-pointer font-bold text-gray-700 hover:border-pink-300 transition-all text-sm">
                      <span>ğŸ‘©</span>
                      <span>Female</span>
                    </label>
                  </div>
                </div>
              </div>

              <!-- SPU ID -->
              <div>
                <label class="block text-gray-800 font-black mb-1.5 sm:mb-2 text-xs sm:text-sm uppercase tracking-wider">
                  ğŸ†” SPU ID *
                </label>
                <input 
                  type="text" 
                  name="spuId" 
                  required 
                  pattern="[0-9]{10}"
                  maxlength="10"
                  class="w-full px-3 sm:px-4 py-2.5 sm:py-3 text-sm sm:text-base border-2 sm:border-3 border-pink-200 rounded-xl focus:border-pink-500 focus:ring-2 sm:focus:ring-4 focus:ring-pink-100 focus:outline-none font-semibold shadow-sm transition-all"
                  placeholder="10 digit ID"
                >
                <p class="text-xs text-gray-600 font-semibold mt-1">10 digits only</p>
              </div>

              <!-- Age -->
              <div>
                <label class="block text-gray-800 font-black mb-1.5 sm:mb-2 text-xs sm:text-sm uppercase tracking-wider">
                  ğŸ‚ Age *
                </label>
                <input 
                  type="number" 
                  name="age" 
                  required 
                  min="16"
                  max="35"
                  class="w-full px-3 sm:px-4 py-2.5 sm:py-3 text-sm sm:text-base border-2 sm:border-3 border-pink-200 rounded-xl focus:border-pink-500 focus:ring-2 sm:focus:ring-4 focus:ring-pink-100 focus:outline-none font-semibold shadow-sm transition-all"
                  placeholder="18"
                >
                <p class="text-xs text-gray-600 font-semibold mt-1">16-35 years</p>
              </div>
            </div>

            <!-- Roll Number -->
            <div>
              <label class="block text-gray-800 font-black mb-1.5 sm:mb-2 text-xs sm:text-sm uppercase tracking-wider">
                ğŸ“ Roll Number *
              </label>
              <input 
                type="text" 
                name="rollNumber" 
                id="rollNumberInput"
                required 
                class="w-full px-3 sm:px-4 py-2.5 sm:py-3 text-sm sm:text-base border-2 sm:border-3 border-pink-200 rounded-xl focus:border-pink-500 focus:ring-2 sm:focus:ring-4 focus:ring-pink-100 focus:outline-none font-semibold shadow-sm transition-all uppercase"
                placeholder="25BCA999 or 25BIT999"
              >
              <p class="text-xs text-gray-600 font-semibold mt-1">
                <span class="font-bold text-pink-600">Example:</span> 25BCA999 or 25BIT999
              </p>
            </div>

            <!-- Password -->
            <div>
              <label class="block text-gray-800 font-black mb-1.5 sm:mb-2 text-xs sm:text-sm uppercase tracking-wider">
                ğŸ”’ Password *
              </label>
              <input 
                type="password" 
                name="password" 
                required 
                minlength="6" 
                class="w-full px-3 sm:px-4 py-2.5 sm:py-3 text-sm sm:text-base border-2 sm:border-3 border-pink-200 rounded-xl focus:border-pink-500 focus:ring-2 sm:focus:ring-4 focus:ring-pink-100 focus:outline-none font-semibold shadow-sm transition-all"
                placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
              >
              <p class="text-xs text-gray-600 font-semibold mt-1">Minimum 6 characters</p>
            </div>
          </div>
        </div>

        <!-- Academic Information Section -->
        <div class="bg-gradient-to-r from-blue-50 to-cyan-50 p-4 sm:p-5 rounded-2xl border-2 border-blue-200">
          <h3 class="text-lg sm:text-xl font-black text-gray-800 mb-3 sm:mb-4 flex items-center gap-2">
            <span class="w-7 h-7 sm:w-8 sm:h-8 bg-gradient-to-r from-blue-500 to-cyan-500 rounded-full flex items-center justify-center text-white text-xs sm:text-sm">2</span>
            Academic Details
          </h3>
          
          <div class="space-y-3 sm:space-y-4">
            <!-- College -->
            <div>
              <label class="block text-gray-800 font-black mb-1.5 sm:mb-2 text-xs sm:text-sm uppercase tracking-wider">
                ğŸ« College / University *
              </label>
              <select 
                name="college" 
                id="collegeSelect" 
                required 
                class="w-full px-3 sm:px-4 py-2.5 sm:py-3 text-sm sm:text-base border-2 sm:border-3 border-blue-200 rounded-xl focus:border-blue-500 focus:ring-2 sm:focus:ring-4 focus:ring-blue-100 focus:outline-none font-semibold shadow-sm transition-all appearance-none bg-white" 
                onchange="updateDepartments()"
              >
                <option value="">-- Select Your College --</option>
                <% colleges.forEach(college => { %>
                  <option value="<%= college._id %>" data-departments='<%= JSON.stringify(college.departments || []) %>'>
                    <%= college.name %>
                  </option>
                <% }); %>
              </select>
            </div>

            <!-- Department -->
            <div>
              <label class="block text-gray-800 font-black mb-1.5 sm:mb-2 text-xs sm:text-sm uppercase tracking-wider">
                ğŸ“š Department *
              </label>
              <select 
                name="department" 
                id="departmentSelect" 
                required 
                class="w-full px-3 sm:px-4 py-2.5 sm:py-3 text-sm sm:text-base border-2 sm:border-3 border-blue-200 rounded-xl focus:border-blue-500 focus:ring-2 sm:focus:ring-4 focus:ring-blue-100 focus:outline-none font-semibold shadow-sm transition-all appearance-none bg-white"
              >
                <option value="">First select college</option>
              </select>
              <p class="text-xs text-gray-600 font-semibold mt-1">Select college first to see departments</p>
            </div>

            <!-- Division -->
            <div>
              <label class="block text-gray-800 font-black mb-1.5 sm:mb-2 text-xs sm:text-sm uppercase tracking-wider">
                ğŸ¯ Division *
              </label>
              <select 
                name="division" 
                id="divisionSelect"
                required 
                class="w-full px-3 sm:px-4 py-2.5 sm:py-3 text-sm sm:text-base border-2 sm:border-3 border-blue-200 rounded-xl focus:border-blue-500 focus:ring-2 sm:focus:ring-4 focus:ring-blue-100 focus:outline-none font-semibold shadow-sm transition-all appearance-none bg-white"
              >
                <option value="">-- Select Division --</option>
                <option value="A">Division A</option>
                <option value="B">Division B</option>
                <option value="C">Division C</option>
              </select>
              <p class="text-xs text-gray-600 font-semibold mt-1">Choose your class division</p>
            </div>
          </div>
        </div>

        <!-- Submit Button -->
        <button 
          type="submit" 
          class="w-full bg-gradient-to-r from-pink-500 via-red-500 to-blue-500 hover:from-pink-600 hover:via-red-600 hover:to-blue-600 text-white font-black py-3 sm:py-4 rounded-2xl shadow-xl hover:shadow-2xl active:scale-95 transition-all duration-300 text-base sm:text-lg"
        >
          <span class="flex items-center justify-center gap-2">
            <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Create Account
          </span>
        </button>
      </form>

      <!-- Divider -->
      <div class="relative my-5 sm:my-6">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t-2 border-gray-200"></div>
        </div>
        <div class="relative flex justify-center text-xs sm:text-sm">
          <span class="px-3 sm:px-4 bg-white text-gray-500 font-bold">Already have an account?</span>
        </div>
      </div>

      <!-- Login Link -->
      <a 
        href="/auth/login" 
        class="block w-full text-center bg-gradient-to-r from-gray-100 to-gray-200 hover:from-gray-200 hover:to-gray-300 active:scale-95 text-gray-800 font-black py-3 sm:py-4 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 text-sm sm:text-base"
      >
        <span class="flex items-center justify-center gap-2">
          <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
          </svg>
          Sign In Instead
        </span>
      </a>
    </div>

    <!-- Footer Note -->
    <p class="text-center text-white/80 mt-4 sm:mt-6 text-xs sm:text-sm font-semibold px-4">
      ğŸ” By registering, you agree to our Terms & Conditions
    </p>
  </div>

  <!-- GLOBAL FOOTER (BOTTOM) -->
  <footer class="mt-6 border-t border-gray-200 bg-white/80 backdrop-blur relative z-10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-3 flex flex-col sm:flex-row items-center justify-center gap-2 text-xs sm:text-sm text-gray-600">
      <p class="font-semibold text-right">
        Â© 2026 HTI. All rights reserved.
      </p>
      <p class="flex items-center gap-1 text-right">
        <span>Made by</span>
        <a 
          href="https://www.linkedin.com/in/ishwar-prajapati/" 
          target="_blank" 
          rel="noopener noreferrer"
          class="text-indigo-600 font-bold hover:underline hover:text-indigo-800"
        >
          Ishwar Prajapati
        </a>
      </p>
    </div>
  </footer>

  <script>
    // Update departments when college is selected
    function updateDepartments() {
      const collegeSelect = document.getElementById('collegeSelect');
      const departmentSelect = document.getElementById('departmentSelect');
      
      const selectedOption = collegeSelect.options[collegeSelect.selectedIndex];
      const departments = JSON.parse(selectedOption.getAttribute('data-departments') || '[]');
      
      departmentSelect.innerHTML = '';
      
      if (departments.length === 0) {
        departmentSelect.innerHTML = '<option value="">No departments available</option>';
        departmentSelect.disabled = true;
      } else {
        departmentSelect.innerHTML = '<option value="">-- Select Department --</option>';
        departments.forEach(dept => {
          const option = document.createElement('option');
          option.value = dept;
          option.textContent = dept;
          departmentSelect.appendChild(option);
        });
        departmentSelect.disabled = false;
      }
    }

    // âœ… DEBUG FORM SUBMISSION
    document.getElementById('registrationForm').addEventListener('submit', function(e) {
      console.log('\nğŸ” ===== FORM SUBMISSION DEBUG =====');
      
      const formData = new FormData(this);
      
      console.log('ğŸ“‹ All Form Data:');
      for (let [key, value] of formData.entries()) {
        console.log(`   ${key}: "${value}"`);
      }
      
      const rollNumber = formData.get('rollNumber');
      const division = formData.get('division');
      const spuId = formData.get('spuId');
      const age = formData.get('age');
      
      console.log('\nğŸ¯ Critical Fields:');
      console.log('   rollNumber:', rollNumber, '(type:', typeof rollNumber, ')');
      console.log('   division:', division, '(type:', typeof division, ')');
      console.log('   spuId:', spuId, '(type:', typeof spuId, ')');
      console.log('   age:', age, '(type:', typeof age, ')');
      
      console.log('===== END DEBUG =====\n');
    });

    // Prevent zoom on input focus (iOS)
    document.querySelectorAll('input, select').forEach(element => {
      element.addEventListener('focus', function() {
        this.style.fontSize = window.innerWidth < 640 ? '16px' : '';
      });
    });
  </script>
</body>
</html>

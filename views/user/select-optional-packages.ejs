<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    body {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
    }
  </style>
</head>
<body>
  <%- include('../partials/navbar') %>

  <main class="max-w-7xl mx-auto px-4 pt-24 pb-10">
    
    <!-- Header -->
    <div class="text-center mb-8 text-white">
      <h1 class="text-5xl font-extrabold mb-2 drop-shadow-lg">üì¶ Optional Packages</h1>
      <p class="text-xl opacity-90">Enhance your heritage tour experience (Optional)</p>
    </div>

    <!-- Success/Error Messages -->
    <% if (success) { %>
      <div class="mb-6 bg-green-500 text-white p-4 rounded-xl shadow-lg flex items-center gap-3 animate-pulse">
        <span class="text-2xl">‚úÖ</span>
        <p class="font-semibold"><%= success %></p>
      </div>
    <% } %>

    <% if (error) { %>
      <div class="mb-6 bg-red-500 text-white p-4 rounded-xl shadow-lg flex items-center gap-3">
        <span class="text-2xl">‚ùå</span>
        <p class="font-semibold"><%= error %></p>
      </div>
    <% } %>

    <!-- Main Package Info -->
    <div class="bg-white rounded-2xl shadow-2xl p-6 mb-8 border-4 border-green-500">
      <h2 class="text-2xl font-bold text-gray-800 mb-4">‚úÖ Your Selected Main Package</h2>
      <div class="flex justify-between items-center">
        <div>
          <p class="text-2xl font-bold text-gray-800"><%= user.selectedPackage.name %></p>
          <p class="text-gray-600">Main Package</p>
        </div>
        <div class="text-right">
          <p class="text-4xl font-bold text-green-600">‚Çπ<%= user.selectedPackage.price.toLocaleString('en-IN') %></p>
        </div>
      </div>
    </div>

    <!-- Optional Packages Form -->
    <form action="/user/select-optional-packages" method="POST">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
        <% if (optionalPackages.length === 0) { %>
          <div class="col-span-full bg-white rounded-2xl shadow-2xl p-12 text-center">
            <p class="text-2xl text-gray-500 mb-4">üì¶ No optional packages available</p>
            <a href="/user/dashboard" class="inline-block bg-gradient-to-r from-purple-600 to-pink-600 text-white px-8 py-3 rounded-xl font-bold hover:shadow-lg transition">
              Go to Dashboard
            </a>
          </div>
        <% } else { %>
          <% optionalPackages.forEach(pkg => { %>
            <label class="cursor-pointer group">
              <input 
                type="checkbox" 
                name="optionalPackageIds" 
                value="<%= pkg._id %>"
                <%= selectedOptionalIds.includes(pkg._id.toString()) ? 'checked' : '' %>
                class="hidden peer"
              >
              <div class="bg-white rounded-2xl shadow-xl overflow-hidden border-4 border-transparent peer-checked:border-indigo-600 peer-checked:shadow-2xl transition-all hover:scale-105 h-full flex flex-col">
                <div class="p-6 flex-1 flex flex-col">
                  <div class="flex justify-between items-start mb-4">
                    <h3 class="text-xl font-bold text-gray-800 flex-1"><%= pkg.name %></h3>
                    <div class="w-8 h-8 rounded-full border-4 border-gray-300 peer-checked:border-indigo-600 peer-checked:bg-indigo-600 flex items-center justify-center flex-shrink-0 ml-2">
                      <span class="text-white font-bold peer-checked:block hidden">‚úì</span>
                    </div>
                  </div>
                  
                  <p class="text-gray-600 mb-4 text-sm flex-1"><%= pkg.description %></p>
                  
                  <div class="bg-indigo-50 rounded-xl p-4 mb-4">
                    <p class="text-3xl font-bold text-indigo-600">‚Çπ<%= pkg.price.toLocaleString('en-IN') %></p>
                    <p class="text-sm text-gray-600"><%= pkg.duration %> Days</p>
                  </div>

                  <% if (pkg.places && pkg.places.length > 0) { %>
                    <div class="border-t pt-4">
                      <p class="text-sm font-semibold text-gray-700 mb-2">Includes:</p>
                      <ul class="space-y-1">
                        <% pkg.places.slice(0, 3).forEach(place => { %>
                          <li class="text-sm text-gray-600">‚Ä¢ <%= place.name %></li>
                        <% }); %>
                        <% if (pkg.places.length > 3) { %>
                          <li class="text-sm text-indigo-600 font-semibold">+ <%= pkg.places.length - 3 %> more</li>
                        <% } %>
                      </ul>
                    </div>
                  <% } %>
                </div>
              </div>
            </label>
          <% }); %>
        <% } %>
      </div>

      <!-- Action Buttons -->
      <% if (optionalPackages.length > 0) { %>
        <div class="flex gap-4 justify-center">
          <a href="/user/dashboard" class="bg-gray-500 text-white px-8 py-4 rounded-xl font-bold hover:bg-gray-600 transition text-lg">
            Skip Optional Packages
          </a>
          <button type="submit" class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white px-8 py-4 rounded-xl font-bold hover:shadow-2xl transform hover:scale-105 transition text-lg">
            Save Selection & Continue
          </button>
        </div>
      <% } %>
    </form>

  </main>
</body>
</html>

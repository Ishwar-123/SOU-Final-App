<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    body { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); min-height: 100vh; }
  </style>
</head>
<body>
  <%- include('../partials/navbar') %>
  
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 mt-20">
    <!-- Back Button -->
    <div class="mb-6">
      <a href="/user/dashboard" class="inline-flex items-center bg-white text-indigo-600 font-bold px-6 py-3 rounded-xl hover:shadow-xl transform hover:scale-105 transition-all">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Dashboard
      </a>
    </div>

    <!-- Package Header -->
    <div class="bg-white rounded-2xl shadow-2xl overflow-hidden mb-8">
      <div class="bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 p-10 text-white">
        <h1 class="text-5xl font-bold mb-6"><%= package.name %></h1>
        <div class="flex flex-wrap items-center gap-6 text-xl">
          <div class="flex items-center bg-white/20 px-6 py-3 rounded-full">
            <svg class="w-7 h-7 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="font-bold"><%= package.duration %> Days Tour</span>
          </div>
          
          <div class="flex items-center bg-white/20 px-6 py-3 rounded-full">
            <svg class="w-7 h-7 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            </svg>
            <span class="font-bold"><%= package.places.length %> Heritage Sites</span>
          </div>
          
          <div class="flex items-center bg-white/20 px-6 py-3 rounded-full">
            <svg class="w-7 h-7 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-3xl font-bold">‚Çπ<%= package.price.toLocaleString() %></span>
          </div>
        </div>
      </div>
    </div>

    <!-- Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-8">
        <!-- Description -->
        <div class="bg-white rounded-2xl shadow-2xl p-8">
          <h2 class="text-3xl font-bold text-gray-800 mb-4">üìñ Package Description</h2>
          <p class="text-gray-700 text-lg leading-relaxed"><%= package.description %></p>
        </div>

        <!-- Places -->
        <div class="bg-white rounded-2xl shadow-2xl p-8">
          <h2 class="text-3xl font-bold text-gray-800 mb-6">üèõÔ∏è Heritage Places Included</h2>
          <div class="space-y-4">
            <% package.places.forEach((place, index) => { %>
              <div class="bg-gradient-to-r from-indigo-50 to-purple-50 p-6 rounded-2xl hover:shadow-lg transition-all">
                <div class="flex items-start space-x-4">
                  <div class="w-14 h-14 bg-gradient-to-br from-indigo-600 to-purple-600 rounded-full flex items-center justify-center flex-shrink-0">
                    <span class="text-white font-bold text-xl"><%= index + 1 %></span>
                  </div>
                  
                  <div class="flex-1">
                    <div class="flex items-center justify-between mb-2">
                      <h3 class="text-xl font-bold text-gray-800"><%= place.name %></h3>
                      <span class="bg-indigo-200 text-indigo-800 px-4 py-1 rounded-full text-sm font-bold">
                        <%= place.category %>
                      </span>
                    </div>
                    
                    <div class="flex items-center text-gray-600 mb-3">
                      <svg class="w-5 h-5 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                      </svg>
                      <span class="font-medium"><%= place.location %></span>
                    </div>
                    
                    <p class="text-gray-700"><%= place.description %></p>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- College Info -->
        <div class="bg-white rounded-2xl shadow-2xl p-6 sticky top-24">
          <h3 class="text-2xl font-bold text-gray-800 mb-6">üè´ College Details</h3>
          
          <div class="space-y-4">
            <div class="bg-blue-50 p-4 rounded-xl">
              <p class="text-sm text-gray-600 mb-1">College Name</p>
              <p class="font-bold text-gray-800"><%= package.college.name %></p>
            </div>
            
            <div class="bg-purple-50 p-4 rounded-xl">
              <p class="text-sm text-gray-600 mb-1">Department</p>
              <p class="font-bold text-gray-800"><%= package.college.department %></p>
            </div>
            
            <div class="bg-green-50 p-4 rounded-xl">
              <p class="text-sm text-gray-600 mb-1">SOU Ambassador</p>
              <p class="font-bold text-gray-800"><%= package.college.souAmbassadorName %></p>
              <div class="flex items-center mt-2">
                <svg class="w-5 h-5 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                <a href="tel:<%= package.college.souAmbassadorContact %>" class="text-green-600 font-bold">
                  <%= package.college.souAmbassadorContact %>
                </a>
              </div>
            </div>
            
            <div class="bg-orange-50 p-4 rounded-xl">
              <p class="text-sm text-gray-600 mb-1">Available Buses</p>
              <p class="text-3xl font-bold text-orange-600"><%= package.college.numberOfBuses %></p>
            </div>
          </div>

          <!-- Price & Action -->
          <div class="mt-6 pt-6 border-t-2 border-gray-200">
            <div class="flex items-center justify-between mb-6">
              <span class="text-gray-700 font-bold">Package Price</span>
              <span class="text-4xl font-bold text-indigo-600">‚Çπ<%= package.price.toLocaleString() %></span>
            </div>
            
            <% if (user.selectedPackage && user.selectedPackage._id.toString() === package._id.toString()) { %>
              <button disabled class="w-full bg-green-500 text-white font-bold py-4 rounded-xl cursor-not-allowed">
                ‚úì Currently Selected
              </button>
            <% } else { %>
              <form action="/user/select-package" method="POST">
                <input type="hidden" name="packageId" value="<%= package._id %>">
                <button type="submit" class="w-full bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-bold py-4 rounded-xl hover:shadow-2xl transform hover:scale-105 transition-all">
                  Select This Package
                </button>
              </form>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </main>

  <div class="py-8"></div>
</body>
</html>
